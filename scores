#include <iostream>
using namespace std;
int main()
{
	int s1, s2, s3;
	double avg;
	char again;
	do
	{
		cout << "enter 3 scores and i will get the avg: ";
		cin >> s1 >> s2 >> s3;
		avg = (s1 + s2 + s3) / 3.0;
		cout << "the avg is : " << avg << ".\n";
		cout << "do you want to get the avg of anthor set ?(y/n) ";
		cin >> again;
	} while (again == 'Y' || again == 'y');
	system("pause");
	return 0;
}
